{
  "name": "wireit",
  "private": true,
  "version": "0.0.0",
  "description": "Upgrade your npm scripts to make them smarter and more efficient",
  "author": "Google LLC",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/google/wireit.git"
  },
  "type": "module",
  "bin": {
    "wireit": "bin/wireit.js"
  },
  "files": [
    "bin/wireit.js",
    "lib/**/*.js",
    "!lib/test/**"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "tsc --build",
    "lint": "eslint .",
    "format": "prettier . -w",
    "format:check": "prettier . -c",
    "test": "uvu lib/test \"\\.test\\.js$\""
  },
  "devDependencies": {
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "cmd-shim": "^4.1.0",
    "eslint": "^8.11.0",
    "prettier": "^2.5.1",
    "typescript": "^4.6.2",
    "uvu": "^0.5.3"
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": false
  }
}
